{
    "id": "jumpstarter-cli",
    "version": "1.0.0",
    "name": "Jumpstarter CLI",
    "description": "Installs Jumpstarter CLI (jmp and j commands) as global tools via uv",
    "documentationURL": "https://github.com/jumpstarter-dev/jumpstarter",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest"
            ],
            "default": "latest",
            "description": "Version of jumpstarter-cli to install"
        },
        "packageRepo": {
            "type": "string",
            "proposals": [
                "jumpstarter",
                "pypi",
                "https://pkg.jumpstarter.dev/",
                "https://custom-repo.example.com/simple/"
            ],
            "default": "jumpstarter",
            "description": "Package repository: 'jumpstarter' (pkg.jumpstarter.dev), 'pypi', or custom URL (https://...)"
        }
    },
    "installsAfter": [
        "./features/uv"
    ]
}
